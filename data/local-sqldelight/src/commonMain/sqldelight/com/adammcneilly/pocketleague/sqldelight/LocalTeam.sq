CREATE TABLE localTeam(
  id TEXT NOT NULL PRIMARY KEY,
  name TEXT NOT NULL,
  imageURL TEXT,
  isFavorite INTEGER AS Boolean NOT NULL DEFAULT 0
);

selectAll:
SELECT *
FROM localTeam
ORDER BY name;

selectFavorites:
SELECT *
FROM localTeam
WHERE isFavorite = 1
ORDER BY name;

insertFullTeamObject:
INSERT INTO localTeam(
    id,
    name,
    imageURL,
    isFavorite
)
VALUES ?
ON CONFLICT(id) DO
UPDATE SET
    name = excluded.name,
    imageURL = excluded.imageURL
;

setFavorite:
UPDATE localTeam
SET isFavorite = :isFavorite
WHERE id = :id;
